<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.container {
			display: block;
			width: 600px;
			height: 600px;
		}
		.tab {
			height: 445px;
			overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel styleName="modal {style.container}">
			<div class="modal-header">
				<g:Button ui:field="closeButton" styleName="close">Ã—</g:Button>
				<h3 ui:field="syntaxTitle" />
			</div>
			<div class="modal-body">
				<span ui:field="intro"></span> :
				<ul class="tabs">
					<li class="active">
						<g:Anchor ui:field="movementsTab" />
					</li>
					<li>
						<g:Anchor ui:field="penTab" />
					</li>
					<li>
						<g:Anchor ui:field="mathTab" />
					</li>
					<li>
						<g:Anchor ui:field="functionsTab" />
					</li>
				</ul>
				<g:HTML ui:field="movementsPanel" styleName="{style.tab}" />
				<g:HTML ui:field="penPanel" styleName="{style.tab}" visible="false"/>
				<g:HTML ui:field="mathPanel" styleName="{style.tab}" visible="false"/>
				<g:HTML ui:field="functionsPanel" styleName="{style.tab}" visible="false"/>
			</div>
	</g:HTMLPanel>
</ui:UiBinder>